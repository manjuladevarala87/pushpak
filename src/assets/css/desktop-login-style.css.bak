/**-- Login --**/
.leftlogo-div{
  float: left;
  text-align: left;
}
.leftlogo-div img{
  margin: 0 0 0 30px;
}
.leftlogo-div h6{
  font-size: 16px;
  font-weight:700;
}
.login-main-container {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    overflow: auto;
    overflow-x:hidden;
}
.login-block-tbl {
    display:table;
    width:100%;
    height:100%;
}
.login-block-row {
    display:table-row;
}
.login-block-cell {
    display:table-cell;
    text-align:center;
    vertical-align:middle;
    padding:30px 0;
}
.login-main {
	width: 1200px;
    display:inline-block;
}
.login-left, .login-right {
	width: 50%;
	float: left;
	padding: 0 30px 0;
}
.vst-logo, .leaf-symbol, .smart-text {
	width: 100%;
	float: left;
	text-align: center;
}
.leaf-symbol {
	margin-top: -10px;
}
.smart-text {
	padding-left: 22px;
}
.smart-text svg path {
	fill: #2e3032;
}
.login-container {
	width: 430px;
	max-width: 430px;
	min-height:250px;
	float: left;
	border-radius: 20px;
	padding: 36px 35px 40px 35px;
	-webkit-box-shadow: 0px 1px 40px 0px rgba(23, 8, 88, 0.35);
-moz-box-shadow:    0px 1px 40px 0px rgba(23, 8, 88, 0.35);
box-shadow:         0px 1px 40px 0px rgba(23, 8, 88, 0.35);
}
.login-container h4 {
	margin: 0px;
	text-align: center;
	font-size: 20px;
	color: #fff;
	font-weight: 600;
	letter-spacing: 0.5px;
}
.form-container, .form-group {
	width: 100%;
	float: left;
}
.form-group {
	margin-top: 20px;
}
.form-group label {
	width: 100%;
	float: left;
	font-size: 12px;
	color: #000;
	line-height: 14px;
	text-align: left;
}
.form-group input[type="text"], .form-group input[type="password"] {
	background-color: transparent;
	padding: 8px 0 8px 0;
	border: none;
	border-bottom: #fff 2px solid;
	width: 100%;
	float: left;
	color: #fff;
	font-size: 14px;
    font-family: 'Open Sans', sans-serif;
    outline:0;
}
 .form-group input[type="text"]::-webkit-input-placeholder, .form-group input[type="password"]::-webkit-input-placeholder { /* Chrome/Opera/Safari */
 color:#fff;
opacity:1;
}
.form-group input[type="text"]::-moz-placeholder, .form-group input[type="password"]::-moz-placeholder { /* Firefox 19+ */
 color:#000;
opacity:1;
}
.form-group input[type="text"]:-ms-input-placeholder, .form-group input[type="password"]:-ms-input-placeholder { /* IE 10+ */
 color:#000;
opacity:1;
}
.form-group input[type="text"]:-moz-placeholder, .form-group input[type="password"]:-moz-placeholder { /* Firefox 18- */
 color:#000;
opacity:1;
}
.form-group input[type="password"]::-webkit-input-placeholder {
 font-size: 26px;
 padding: 10px 0;
 line-height: 12px;
}
.captcha, .linksBlock {
	width: 100%;
	float: left;
	text-align: center;
	margin: 10px 0 0;
}
.form-group .captcha label{
    float: none;
    text-align: center;
    font-size: 30px;
    color: #000;
    font-weight: normal;
    display: inline-block;
    width:auto;
    vertical-align:top;
    line-height:38px;
}
.icon-reload{
    display:inline-block;
    vertical-align:top;
	margin: 7px 0 0 10px;
	border: 0;
    background: transparent;
}
.login-container .form-group input[type="text"], 
.login-container .form-group input[type="password"]{
        padding: 4px 0 4px 0;
        font-size:12px;
        color:#fff;
        border-radius:0;
}
.linksBlock {
	margin: 0px;
}
.clearfix {
	clear: left;
}
.linksBlock a {
	color: #fff;
	font-size: 12px;
	display: inline-block;
	text-decoration: none;
    cursor:pointer;
}
.linksBlock a.goBtn,
.linksBlock button.goBtn {
	background: #631411;
	font-size: 20px !important;
	font-weight: 600;
	text-align: center;
	width: 100%;
	float: left;
	margin-top: 15px;
	border-radius: 20px;
	padding: 15px 20px;
    border:0;
    color:#fff;
    outline:0;
}
.errorMsg, .successMsg{
	background:#f36565;
	    padding: 10px 30px 10px 50px;
	float: left;
	width:430px;
	font-size: 12px;
	color: #a94442;
	border-radius: 20px;
	position: relative;
	z-index: 1;
    margin:10px 0 0 0;
}
.successMsg{
	background: #42c75e;
}
.errorMsg span, .errorMsg i, .successMsg span, .successMsg i{
	float: left;
	color: #fff;
	font-size: 13px;
}
.successMsg i{
	padding-top:7px;
}
.errorMsg i{
        margin-top: 0;
    position: absolute;
    left: 36px;
    top: 17px;
}
.errorMsg span, .successMsg span{
	padding:7px 12px;
font-style: italic;
	font-weight: 600;
}
.successMsgdiv .errorMsg{
    width:100%;
}
.closediv{
	float: right;
	padding:8px 0 4px;
}
.arrow{
	text-align: left;
	float: left;
}
.arrow svg path, .closediv svg path, .successMsg i svg path{
	fill:#fff;
}
.sideBigtitlelogin {
	font-size: 38px;
    color: #2e3032;
    text-transform: uppercase;
    font-family: "MedusaGothic";
    padding-left: 188px;
    float: left;
    line-height: 35px;
    text-align: left;
}
/**-- Login Ends --**/
@media (max-width:1200px) {
    /**-- Login --**/
    .login-main {
        width: 100%;
        margin: auto;
    }
    .login-left, .login-right { 
        padding: 0 30px 0;
    }
    /**-- Login Ends --**/
}
@media (max-width:999px) {
.leftlogo-div img{
	margin: 0;
}
/**-- Login --**/
.sideBigtitlelogin{
	text-align: center;
	padding:20px 15px;
	font-size:20px;
}
.login-main {
	width: 100%;
	margin: auto;
}
.login-left, .login-right {
	width: 100%;
	float: left;
	padding: 0 30px 0;
}
.login-right { 
    padding: 10px 30px 0;
	text-align: center;
}
.login-right .login-container{
	float: none;
	display: inline-block;
    min-height:inherit;
    padding: 26px;
}
.leaf-symbol{
	display: none;
}
.smart-text{
	padding: 0px;
}
.smart-text svg{
	width: 175px;
}
.smart-text svg path {
fill: #323335;
}
.form-group label { 
    font-size: 13px; 
}
.login-container .form-group {
    margin: 10px 0 0;
}
.captcha {
    margin:0;
}
.loginleftInner span {
    font-size: 12px;
}
.leftlogo-div{
	text-align: center;
}
.login-left{
display: none;
}
.loginleftInner {
    /* width: 230px; */
}

/**-- Login ends --**/
}

@media (max-width:480px) {
    /**-- Login --**/
    .login-right .login-container {
    width: 100%;
    }
    .login-right { 
        padding-bottom: 10px;
    }
    .errorMsg, .successMsg{ 
    width:100%;
            left: 0px;
    }
    /**-- Login ends --**/
}

@media (max-width:420px){
    /**-- Login --**/
.login-right {
	padding-left: 12px;
	padding-right: 12px;
}
	.login-container{
		padding:25px 22px;
	}
	.vst-logo img{
		width:150px;
		height: auto;
	}
/**-- Login ends --**/
}